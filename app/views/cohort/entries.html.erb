<%=render "layouts/header"%>

<div class="image">


<section class="paper">
    <i class="pin"></i>
    <%= link_to cohort_path(cohort_id: @cohort.id)do %><span class="glyphicon glyphicon-apple" aria-hidden="true"></span><% end %>
 <article class="head"></article>
 <% @cohort.entries.each do |entry| %>
   <%= link_to entry_path(id: entry.id) do %>
   <%= entry.word%> - <%= entry.definition%>
   <%end%>
   <br>
 <% end %>
 <%= link_to new_entry_path do %><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><% end %>
 <%= paginate @entries %>

</section>
</div>
