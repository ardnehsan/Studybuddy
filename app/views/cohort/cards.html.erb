<%= render "layouts/header" %>

<div class="image">

  <%= link_to cohort_path(cohort_id: @cohort.id)do %><span class="glyphicon glyphicon-apple" aria-hidden="true"></span><% end %>
  <%= link_to new_card_path(cohort_id: @cohort.id)do %><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><% end %>

  <div class="stage">
    <% @cohort.cards.each do |card| %>
      <div class="flashcard">
        <div class="front">
          <p><%=card.front%></p>
        </div>
        <div class="back">
          <p><%=card.back%></p>
        </div>
      </div>
      <%end%>
    </div>

</div>
